---
import Layout from "@/layouts/Layout.astro";
import IntroCircle from "@/components/intro-circle";
import HeroSection from "@/sections/hero-section.astro";
import SectionWrapper from "@/components/section-wrapper.astro";
---

<Layout title="Santiago Federici - Portfolio">
  <main class="flex flex-col gap-80 py-20">
    <IntroCircle client:only="react" />

    <HeroSection />

    <SectionWrapper>
      <a
        href="/test"
        class="border rounded-md px-4 py-2 text-base bg-slate-600 text-slate-100"
      >
        Go to test</a
      >
    </SectionWrapper>
  </main>
</Layout>
