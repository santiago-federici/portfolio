  }

  p {
    max-width: 75ch;
    text-wrap: pretty;
  }

  img,
  picture,
  video,
  svg {
    display: block;
    max-width: 100%;
  }

  input,
  textarea,
  button,
  select {
    font: inherit;
  }

  li {
    list-style-type: none;
  }

  @media (prefers-reduced-motion: no-preference) {
    /* doesn't have support in all browsers yet */
