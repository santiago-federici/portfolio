---
import DesktopNavbar from "@/components/navbar/desktop-navbar.astro";
import MobileNavbar from "@/components/navbar/mobile-navbar.astro";
import ThemeToggle from "@/components/theme-toggle.astro";
import { baseAnimation, cn } from "@/lib/utils";
---

<header
  class={cn(
    "fixed w-full top-0 mx-auto z-50 backdrop-blur-sm bg-background/95",
    baseAnimation
  )}
>
  <div class="wrapper flex items-center justify-between py-4">
    <h1 class="text-xl font-semibold hover:text-primary duration-200">
      <a href="/">Portfolio</a>
    </h1>

    <section class="flex items-center gap-6">
      <ThemeToggle />

      <DesktopNavbar />

      <MobileNavbar />
    </section>
  </div>
</header>
